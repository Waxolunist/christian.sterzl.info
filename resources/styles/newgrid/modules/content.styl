header.header-primary
.footer-wrapper
.content-wrapper
  overflow hidden

.center
  margin-left auto
  margin-right auto

header.header-primary
  margin-bottom 1em
  > *
    margin-before 0
    margin-top 0
    margin-after 0
    margin-bottom 0
  & a
    text-decoration none

if responsive
	@media portable-media
    header.header-primary
      margin-bottom 0.1em
      h1
        font-size 6.5vw
      h2
        font-size 3.0vw

  @media palm-media
    header.header-primary
      margin-bottom 0.1em
      h1
        font-size 7.5vw
      h2
        font-size 4.4vw

.content
  background-color white
  &.active
    padding 1em

if responsive
	@media portable-media
    .content
      padding 0 0.3em

.nav-primary
  clear both

footer
  padding-bottom 5em
  border-top 1px black solid

.rss
  float right
  padding 0.5em

.description
  clear both
  color gray
  font-size 0.9em

.subtitle
  font-size 0.8em
  color lighten(gray,30)
  padding-left 1em

if responsive
	@media portable-media
    .subtitle
      padding-left 0

//////////////////////////////////////////////////////////
// States                                               //
//////////////////////////////////////////////////////////
.content
  max-height 0
  &.active
    max-height none

//////////////////////////////////////////////////////////
// Animations                                           //
//////////////////////////////////////////////////////////
.content-wrapper
  opacity 1

.content-wrapper.ng-leave
  transition opacity height ease 0.2s
  opacity 1
  height 100vh
  
.content-wrapper.ng-leave-active
  transition opacity height ease 0.2s
  opacity 0
  height 0


.content-wrapper.ng-enter
  transition opacity height ease 0.2s
  opacity 0
  height 0
  
.content-wrapper.ng-enter-active
  transition opacity height ease 0.2s
  opacity 1
  height 100vh

.bounce
  animation-name bounceIn
